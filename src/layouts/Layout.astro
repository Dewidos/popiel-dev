---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const hasHero = Astro.slots.has("hero");
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Dawid Popiel - freelance web developer</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Roboto+Slab:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="from-primary-400/30 to-accent-400/30 text-text flex min-h-screen flex-col bg-gradient-to-br via-transparent bg-fixed"
  >
    {
      hasHero ? (
        <div class="relative flex min-h-dvh flex-col bg-transparent">
          <Navbar />
          <slot name="hero" />
        </div>
      ) : (
        <Navbar />
      )
    }
    <main class="flex flex-1 flex-col py-24 gap-48">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
